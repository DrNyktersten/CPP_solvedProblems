#include <iostream>
#include <string>
#include <vector>
using namespace std;

int main()
{
	const int SIZE = 10; //Size of an array
	int number[SIZE]; //number array with 10 elements

	cout << "Enter 10 values and," << endl;
	cout << "I will display the lowest/highest number" << endl;
	for (int i = 0; i < SIZE; i++)
	{
		cout << "number " << i + 1 << ": ";
		cin >> number[i];
		while (!(cin >> number[i]))
		{
			cout << "Please enter only numbers" << endl;
			//clear the input stream
			cin.clear();
			//discard previous input
			cin.ignore(123, '\n');
		}
	}

	double smallest,
		highest;
	smallest = number[0];
	highest = number[9];

	//for loop for smallest 
	for (int i = 0; i < SIZE; i++)
	{
		if (number[i] < smallest)
		{
			smallest = number[i];
		}
	}

	//for loop for the highest 
	for (int j = 0; j < SIZE; j++)
	{
		if (number[j] > highest)
		{
			highest = number[j];
		}
	}

	cout << "Smallest number in this array is " << smallest << endl;
	cout << "Highest number in this array is " << highest << endl; 
	return 0; 
}
